
<%= form_with(model: employee, local: true) do |form| %>
  <% if employee.errors.any? %>
    <div id="error_explanation" >
      <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
      <% employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-row">
    <div class="form-group col-md-6">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, :class => "form-control" %>
  </div>
  
    <div class="form-group col-md-6">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, :class => "form-control"  %>
  </div>
  </div>

          
  <div class="form-group">
    <%= form.label :ssn %>
    <%= form.text_field :ssn, :class => "form-control"  %>
  </div>

  <div class="form-group">
    <%= form.label :date_of_birth, :class => "control-label"%>
    <%= form.date_field :date_of_birth, :class => "form-control", :id => "date", :name => "date" %>
  </div>  
  

 
  <div class="form-row">
    <div class="form-group col-md-6">

    <%= form.label :phone %>
    <%= form.text_field :phone, :class => "form-control"  %>
  </div>

  <div class="form-group col-md-4">
    <%= form.label :role %>
    <%= form.text_field :role, :class => "form-control" %>
  </div>

  <div class="form-group col-md-2">
  <%= form.label :active, :class => "custom-control-label" %>
    <%= form.check_box :active, :class => "custom-control-input", :type => "checkbox" %>
  </div>
</div>

  <div class="col-auto my-1">
    <center>
    <%= form.submit "Create", :type => "button", :class => 'btn btn-outline-warning' %>
