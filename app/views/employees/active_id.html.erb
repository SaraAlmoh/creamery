<p id="notice"><%= notice %></p>

<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.active.alphabetical.each do |employee| %>
      <tr>
        <td><%= employee.first_name %></td>
        <td><%= employee.last_name %></td>
        <td><%= employee.id %></td>
      </tr>
    <% end %>
  </tbody>
</table>

