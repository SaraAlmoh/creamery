<p id="notice"><%= notice %></p>

<h1>Employees</h1>

<div align=right>
<%= link_to 'New Employee', new_employee_path %> 
</div>
<%= link_to 'All', employees_path(:alphabetical => true) %>|
<%= link_to 'Managers', employees_path(:managers => true) %>|
<%= link_to 'Admins', employees_path(:admins => true) %>|
<%= link_to 'Employees', employees_path(:regulars => true) %>|
<%= link_to 'Inactive', employees_path(:inactive => true) %>|
<%= link_to 'Active', employees_path(:active => true) %>|
<%= link_to '18 years or older', employees_path(:is_18_or_older => true) %>|
<%= link_to 'Younger than 18', employees_path(:younger_than_18 => true) %>

<br>
<br>

<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Ssn</th>
      <th>Date of birth</th>
      <th>Phone</th>
      <th>Role</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.first_name %></td>
        <td><%= employee.last_name %></td>
        <td><%= employee.ssn %></td>
        <td><%= employee.date_of_birth %></td>
        <td><%= employee.phone %></td>
        <td><%= employee.role %></td>
        <td><%= employee.active %></td>
        <td><%= link_to 'Show', employee %></td>
        <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
        <td><%= link_to 'Destroy', employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

