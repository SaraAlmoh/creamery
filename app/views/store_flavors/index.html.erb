<p id="notice"><%= notice %></p>

<h1>Store Flavors</h1>
 <% if logged_in? && current_users_role == "admin" || current_users_role == "manager"%>
<div align="right">
<%= link_to 'New Store Flavor', new_Store_flavor_path %>
</div>
<% end %>
<% if @store_flavors == nil %>
<p>No flavors found</p>
<%
    else
  %>

<table>
  <thead>
    <tr>
      <th>Store</th>
      <th>Flavor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @store_flavors.each do |store_flavor| %>
      <tr>
        <td><%= store_flavor.store_id %></td>
        <td><%= store_flavor.flavor_id %></td>
        <td><%= link_to 'Show', store_flavor %></td>
        <td><%= link_to 'Edit', edit_store_flavor_path(store_flavor) %></td>
        <td><%= link_to 'Destroy', store_flavor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
    <% end %>

