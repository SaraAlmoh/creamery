<p id="notice"><%= notice %></p>

<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stores.active.alphabetical.each do |store| %>
      <tr>
        <td><%= store.name %></td>
        <td><%= store.id %></td>
      </tr>
    <% end %>
  </tbody>
</table>

