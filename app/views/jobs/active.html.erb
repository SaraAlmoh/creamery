
<h1>Jobs</h1>

 <% if logged_in? && current_users_role == "admin" %>
<div align="right">
<%= link_to 'New Store', new_job_path %>
</div>
<% end %>
<%= link_to 'All', jobs_path %>|
<%= link_to 'Active', jobs_active_path %>|
<%= link_to 'Inactive', jobs_inactive_path %>


<table class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>String</th>
      <th>Description</th>
      <th>Text</th>
      <th>Active</th>
      <th>Boolean</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.name %></td>
        <td><%= job.description %></td>
        <td><%= job.active %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

