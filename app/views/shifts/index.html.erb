<p id="notice"><%= notice %></p>

<h1>Shifts</h1>

<table>
  <thead>
    <tr>
      <th>Assignment</th>
      <th>Integer</th>
      <th>Date</th>
      <th>Date</th>
      <th>Start time</th>
      <th>Time,</th>
      <th>End time</th>
      <th>Time</th>
      <th>Notes</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shifts.each do |shift| %>
      <tr>
        <td><%= shift.assignment_id %></td>
        <td><%= shift.integer %></td>
        <td><%= shift.date %></td>
        <td><%= shift.date %></td>
        <td><%= shift.start_time %></td>
        <td><%= shift.time, %></td>
        <td><%= shift.end_time %></td>
        <td><%= shift.time %></td>
        <td><%= shift.notes %></td>
        <td><%= shift.text %></td>
        <td><%= link_to 'Show', shift %></td>
        <td><%= link_to 'Edit', edit_shift_path(shift) %></td>
        <td><%= link_to 'Destroy', shift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

