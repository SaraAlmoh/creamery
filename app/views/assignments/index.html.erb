<p id="notice"><%= notice %></p>

<h1>Assignments</h1>
<div align="right">
<%= link_to 'New Assignment', new_assignment_path %>
</div>
<br>
<%= link_to 'Current', method: :current %>|
<%= link_to 'Past', method: :past %>|
<%= link_to 'By Employee', method: :by_employee %>|
<%= link_to 'By Store', method: :by_store %>|
<%= link_to 'Chronological', method: :chronological %>|
<%= link_to 'For Store', method: :for_store %>|
<%= link_to 'For Employee', method: :for_employee %>|
<%= link_to 'For Pay Level', method: :for_pay_level %>|
<%= link_to 'For Role', method: :for_role %>

<br>
<br>
<table class="table">
  <thead>
    <tr>
      <th>Store</th>
      <th>Employee</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Pay level</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.store_id %></td>
        <td><%= assignment.employee_id %></td>
        <td><%= assignment.start_date %></td>
        <td><%= assignment.end_date %></td>
        <td><%= assignment.pay_level %></td>
        <td><%= link_to 'Show', assignment %></td>
        <td><%= link_to 'Edit', edit_assignment_path(assignment) %></td>
        <td><%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

